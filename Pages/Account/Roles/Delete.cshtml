@page
@model ParkingDemo.Pages.Roles.DeleteModel

@{
    ViewData["Title"] = "Manage Roles";
}

<h1 class="display-5 mb-2">Role - Delete</h1>

<p class="lead">Are you sure you want to delete this?</p>

<hr class="mb-4" />

<div>
    <dl class="row mb-4">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ViewModel.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ViewModel.Name)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="ViewModel.Id" />
        <input type="submit" value="DELETE" class="btn btn-sm btn-danger" />
        <a asp-page="./Index" class="btn btn-sm btn-outline-primary ms-2">BACK TO LIST</a>
    </form>
</div>
