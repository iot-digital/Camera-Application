@page
@model ParkingDemo.Pages.Account.LoginModel
@{
    Layout = null;

    var returnUrl = HttpContext.Request.QueryString.HasValue
                    ? HttpContext.Request.QueryString.Value
                    : "";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Parking Management - Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        html,
        body {
            height: 100vh;
            box-sizing: border-box;
        }

        body {
            padding: 20px 0;
            background-color: #455A64;
            background-size: auto;
        }

        .form-signin {
            width: 100%;
            min-width: 340px;
            max-width: 400px;
            padding: 45px;
            margin: auto;
            background-color: #f8f9fa;
            border: 1px solid lightgrey;
            border-radius: 10px;
            box-shadow: 10px 10px 10px rgba(0,0,0,0.5);
        }

            .form-signin .checkbox {
                font-weight: 400;
            }

        .form-control {
            height: auto;
            padding: 10px;
            font-size: 16px;
        }

            .form-control:focus {
                z-index: 200;
            }

        .validation-summary-errors ul {
            margin-top: 20px;
            margin-bottom: 0;
            padding: 0;
            list-style: none;
        }
    </style>
</head>

<body class="d-flex text-center">
    <div class="form-signin align-self-center">
        <img src="/img/eye.gif" height=60 />
        <p class="lead mb-0 mt-2">Eye In The Sky</p>
        <hr />
        <div id="loginOptions" class="tab-content mt-1">
            <div>
                <form method="post">
                    <input asp-for="@Model.LoginVM.Username" type="text" class="form-control mb-2" placeholder="User Name" autofocus>
                    <input asp-for="@Model.LoginVM.Password" type="password" class="form-control" placeholder="Password" >
                    <div class="checkbox my-3">
                        <label>
                            <input asp-for="@Model.LoginVM.RememberMe" type="checkbox" class="form-check-input">
                            <label asp-for="@Model.LoginVM.RememberMe" class="form-check-label">Remember Me ?</label>
                        </label>
                    </div>

                    <input hidden asp-for="@Model.LoginVM.ReturnUrl" value="@returnUrl" />

                    <button class="btn btn-primary btn-block w-100" style="height:44px;" type="submit">Login</button>

                    <div asp-validation-summary="All" class="text-danger mb-1" style="font-size:14px;"></div>
                </form>
            </div>
        </div>
        <p class="mt-4 mb-0 text-muted"><small>&copy; @(DateTime.Now.Year) - AXISCADES</small></p>
    </div>

</body>
</html>
